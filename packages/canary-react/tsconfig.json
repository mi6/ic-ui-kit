{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "ES6",
    "outDir": "dist",
    "target": "ES5",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "types": ["cypress", "node", "cypress-axe"],
    "skipLibCheck": true 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "cypress/**",
    "src/component-tests/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}