{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es6",
    "outDir": "dist",
    "target": "es5",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["../react/src/**/*.ts", "../react/src/**/*.tsx"],
  "exclude": ["**/__tests__/**", "../react/src/component-tests/**/*"],
  "compileOnSave": false,
  "buildOnSave": false
}
