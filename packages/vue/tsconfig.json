{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es6",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "target": "es5",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": ["node_modules"]
}
